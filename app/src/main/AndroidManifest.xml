        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FuelCalculationApp"
        tools:targetApi="31">
        <activity
            android:name="app.Fuel.MainActivity"
            android:exported="false" />

        <activity
            android:name="app.Fuel.infoPage.InfoActivity"
            android:exported="false" />
        <activity
            android:name="app.Fuel.ResultActivity"
            android:exported="false" />
        <activity
            android:name="app.Fuel.SplashScreenActivity"
            android:theme="@style/SplashTheme"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-1301452834533419~6001491164" />


